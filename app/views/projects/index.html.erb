<div class="container">
	<div class="page-header">
	  <h3>Active Projects</h3>
	</div>

	<div class="row">
		<ul class="thumbnails">
			<% @projects.each do |project| %>
				<li class="span4">
					<div class="thumbnail">
						<%= image_tag project.avatar(:medium) %>
					</div>
					<div class="caption">
		  				<h4 style="margin-bottom: 5px;"><%= link_to project.project_name, project %></h4>
		  				<strong><%= link_to project.project_owner, project %></strong>
		  				<p style="margin-top: 5px;">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>
		  			</div>
		  			<div class="index-funding">
			  			<div class="progress">
							<div class="bar" style="width: <%= project.percent_funded %>%;"></div>
						</div>
						<div class="index-funding-percent">
				  			<strong><%= number_to_percentage(project.percent_funded, :precision => 0) || number_to_percentage(0, :precision => 0)%></strong>
				  			<p>FUNDED</p>
				  		</div>
				  		<div class="index-funding-total">
				  			<strong><%= number_to_currency(project.funded, :precision => 0) || number_to_currency(0, :precision => 0) %></strong>
				  			<p>INVESTED</p>
				  		</div>
				  		<div class="index-funding-savings">
				  			<strong>6.5<%= project.funded %>%</strong>
				  			<p>EST. RETURN</p>
				  		</div>
		  			</div>
		  		</li>
	  		<% end %>
	  	</ul>
	  	<div class="span3">
	  	</div> 
	
	</div>
</div>

