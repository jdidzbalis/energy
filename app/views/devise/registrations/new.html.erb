<div class="container">
  <div class="row-fluid">
    <div class="span6 offset3">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal form-actions"}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend>Sign Up</legend>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :profile_name %>
          <%= f.input :email, placeholder: 'user@domain.com' %>
          <%= f.input :password, hint: 'No special characters' %>
          <%= f.input :password_confirmation%>
         <%= f.button :submit, "Create Account", class:'btn-large btn-block' %>
        </fieldset>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


