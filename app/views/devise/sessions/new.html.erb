<div class="container">
	<div class="row-fluid">
		<div class="span6 offset3">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal form-actions"}) do |f| %>
				<fieldset>
					<legend>Sign In</legend>
		  			<%= f.input :email %>
		  			<%= f.input :password %>
					<% if devise_mapping.rememberable? -%>
		    			<div><%= f.input :remember_me, as: :boolean %></div>
		  			<% end -%>
					<%= f.button :submit, "Sign In", class:'btn-large btn-block'%>
				</fieldset>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>

