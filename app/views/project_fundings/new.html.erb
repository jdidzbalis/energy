<% if @investment %>
	<h1><%= @investment.project_name %></h1>
<% end %>

	<p>Do you really want to invest $100 in <%= @investment.id %>?</p>



	<%= form_for @project_funding, method: :post do |form| %>
		<div class="form form-actions">
			<%= hidden_field_tag :investment_id, value: @investment.id %>
			<%= submit_tag "Yes, invest", class: 'btn btn-primary' %>
			<%= link_to "Cancel", projects_path(@project), class: 'btn' %>
		</div>
	<% end %>

